<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#dddddd"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/address_source"
        android:layout_width="wrap_content"
        android:layout_height="26dp"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="@string/address"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/floatingActionButton"
        android:layout_width="54dp"
        android:layout_height="54dp"
        android:clickable="true"
        app:fabSize="mini"
        app:srcCompat="@mipmap/map_icon"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="6dp"
        android:layout_marginTop="14dp"
        app:layout_constraintTop_toBottomOf="@+id/address_source" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="263dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="45dp"
        android:layout_marginStart="49dp"
        android:layout_marginTop="48dp"
        android:text="@string/source_instructions"
        app:layout_constraintLeft_toRightOf="@+id/floatingActionButton"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/cancelButton"
        android:layout_width="146dp"
        android:layout_height="66dp"
        android:layout_marginBottom="64dp"
        android:layout_marginLeft="32dp"
        android:background="@drawable/menu_buttons"
        android:text="@string/cancel"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="32dp" />

    <Button
        android:id="@+id/createButton"
        android:layout_width="146dp"
        android:layout_height="66dp"
        android:layout_marginBottom="64dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/menu_buttons"
        android:text="@string/create"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginEnd="30dp"
        app:layout_constraintLeft_toRightOf="@+id/cancelButton"
        android:layout_marginLeft="8dp"
        app:layout_constraintHorizontal_bias="0.227" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/etTypeSpinner_source"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="8dp"
        android:text="@string/water_type"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/etTypeSpinner_source"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/floatingActionButton"
        app:layout_constraintVertical_bias="0.833" />

    <Spinner
        android:layout_width="248dp"
        android:layout_height="27dp"
        android:id="@+id/etConditionSpinner_source"
        android:spinnerMode="dialog"
        android:layout_below="@+id/etTypeSpinner_source"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignLeft="@+id/etTypeSpinner_source"
        android:layout_alignStart="@+id/etTypeSpinner_source"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginBottom="82dp"
        app:layout_constraintBottom_toTopOf="@+id/cancelButton" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/etConditionSpinner_source"
        android:layout_marginBottom="17dp"
        android:layout_marginLeft="16dp"
        android:text="@string/water_condition"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/etConditionSpinner_source"
        app:layout_constraintLeft_toLeftOf="parent" />
    <Spinner
        android:id="@+id/etTypeSpinner_source"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:spinnerMode="dialog"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/textView3" />


</android.support.constraint.ConstraintLayout>
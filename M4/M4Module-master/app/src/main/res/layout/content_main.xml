<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:layout_alignParentBottom="true"
tools:context="com.example.olivia.myapplication.controller.MainActivity">

    <TextView
    android:id="@+id/_userInfo"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:layout_editor_absoluteX="8dp"
    tools:layout_editor_absoluteY="7dp" />

    <LinearLayout
        android:id="@+id/_layout"
        android:layout_width="358dp"
        android:layout_height="380dp"
        android:layout_marginBottom="8dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/_userInfo"
        app:layout_constraintVertical_bias="0.414"
        tools:layout_editor_absoluteX="13dp">

        <Button
            android:id="@+id/_submit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Submit a report on water availability" />

        <Button
            android:id="@+id/_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="View available water source" />

        <Button
            android:id="@+id/_purityLevel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Report on water purity levels" />

        <Button
            android:id="@+id/_viewHistory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="View Purity Report" />

        <Button
            android:id="@+id/_trend"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Trends of water purity" />

        <Button
            android:id="@+id/_security"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Security log" />

        <Button
            android:id="@+id/_profile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="My Profile" />

        <Button
            android:id="@+id/_signOut"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="SignOut" />
    </LinearLayout>

</android.support.constraint.ConstraintLayout>